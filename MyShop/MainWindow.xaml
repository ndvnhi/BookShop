<Fluent:RibbonWindow x:Class="MyShop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Fluent="clr-namespace:Fluent;assembly=Fluent"
        xmlns:local="clr-namespace:MyShop"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800" Loaded="Window_Loaded" Closing="RibbonWindow_Closing">


    <DockPanel LastChildFill="True">
        <Fluent:Ribbon DockPanel.Dock="Top" Height="50" Width="800">
            <Fluent:Ribbon.Menu>
                <Fluent:Backstage Header="Edit">
                    <Fluent:BackstageTabControl>
                        <Fluent:BackstageTabItem Header="Dashboard" MouseDown="dashboard_click"/>
                        <Fluent:BackstageTabItem Header="Logout" MouseDown="logout_click"/>
                        <Fluent:BackstageTabItem Header="Invoice" MouseDown="invoice_click"/>
                        <Fluent:BackstageTabItem Header="Exit" MouseDown="BackstageTabItem_MouseDown"></Fluent:BackstageTabItem>
                    </Fluent:BackstageTabControl>
                </Fluent:Backstage>
            </Fluent:Ribbon.Menu>
            <Fluent:RibbonTabItem Header="Home">
            </Fluent:RibbonTabItem>
        </Fluent:Ribbon>
        <Canvas>
            <Label Canvas.Left="621" Canvas.Top="62" FontSize="25" FontWeight="DemiBold" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.515,-0.404" Foreground="#3E8DCC">Book Shop</Label>

            <Label x:Name="totalBooksLabel" Content="Total Books: " Canvas.Left="622" Canvas.Top="100" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.183,1.042" />

            <Label x:Name="Category" Content="Category" Canvas.Left="322" Canvas.Top="20" HorizontalAlignment="Center" VerticalAlignment="Top"></Label>
            <ComboBox Name="categoriesComboBox" DisplayMemberPath="Name" SelectionChanged="categoriesComboBox_SelectionChanged" Canvas.Left="380" Canvas.Top="22" HorizontalAlignment="Center" VerticalAlignment="Top" Width="154" ></ComboBox>
            <Button Content="Clear" Click="ClearSelectionButton_Click" Canvas.Left="540" Canvas.Top="23" HorizontalAlignment="Center" VerticalAlignment="Top" Width="60">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button x:Name="addButton" Width="80" Height="36" Content="Add" Click="addButton_Click" Canvas.Left="640" Canvas.Top="249" HorizontalAlignment="Center" VerticalAlignment="Top" Background="#01BEA4" Foreground="White">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button x:Name="removeButton" Width="80" Height="36" Content="Remove" Click="removeButton_Click" Canvas.Left="640" Canvas.Top="309" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="White" Background="Red">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button x:Name="editButton" Width="80" Height="36" Content="Edit" Click="editButton_Click" Canvas.Left="640" Canvas.Top="369" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="White" Background="#2196F3">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>

            <TextBox x:Name="keywordTextBox" TextChanged="keywordTextBox_TextChanged" Width="200" Canvas.Left="75" Canvas.Top="24" HorizontalAlignment="Left" VerticalAlignment="Center">
                <TextBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <Label x:Name="NameSearch" Content="Name" Canvas.Left="28" Canvas.Top="20" HorizontalAlignment="Center" VerticalAlignment="Top"></Label>

            <Label x:Name="Min" Content="Price" HorizontalAlignment="Left" Canvas.Left="617" VerticalAlignment="Center" Canvas.Top="141"></Label>
            <TextBox x:Name="minPriceTextBox" Width="40" Canvas.Left="658" Canvas.Top="145" HorizontalAlignment="Left" VerticalAlignment="Top" Text="Min" RenderTransformOrigin="0.525,-0.276" GotFocus="OnMinPriceTextBoxGotFocus" />
            <TextBox x:Name="maxPriceTextBox" Width="40" Canvas.Left="703" Canvas.Top="145" HorizontalAlignment="Left" VerticalAlignment="Top" Text="Max" RenderTransformOrigin="0.2,-0.109" GotFocus="OnMaxPriceTextBoxGotFocus" />
            <Button x:Name="searchByPriceButton" Content="Search by Price" Width="100" Height="20" Canvas.Left="628" Canvas.Top="172" HorizontalAlignment="Left" VerticalAlignment="Top" Click="searchByPriceButton_Click" >
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Content="Clear Price" Click="ClearPriceButton_Click" Canvas.Left="650" Canvas.Top="200" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>


            <ListView ScrollViewer.HorizontalScrollBarVisibility="Disabled" Name="booksListView" SelectedValuePath="Id" Width="540" Height="317" Canvas.Left="28" Canvas.Top="51" HorizontalAlignment="Center" VerticalAlignment="Top" d:ItemsSource="{d:SampleData ItemCount=5}">
                <ListView.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </ListView.Resources>
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="1"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Height="200" >

                            <Image Source="{Binding Cover_Image}" Width="150" Height="200"/>

                            <StackPanel Orientation="Vertical" Margin="20,50,0,0" >
                                <TextBlock>
                        <Run Text="Name: " /> 
                        <Run Text="{Binding Name}" Foreground="Blue" FontWeight="Bold"/>
                                </TextBlock>

                                <TextBlock><Run Text="Author: " /><Run Text=" "/><Run Text="{Binding Author}" FontStyle="Italic"/></TextBlock>

                                <TextBlock><Run Text="Published Year: "/><Run Text=" "/><Run Text="{Binding Year}" FontStyle="Italic"/></TextBlock>

                                <TextBlock><Run Text="Price: "/><Run Text=" "/><Run Text="{Binding Price}" FontStyle="Italic"/></TextBlock>

                                <TextBlock><Run Text="Category: "/><Run Text=" "/><Run Text="{Binding Category_Name}" FontStyle="Italic"/></TextBlock>

                                <TextBlock>
                        <Run Text="Quantity: "/>
                        <Run Text="{Binding Quantity}" FontStyle="Italic"/>
                                </TextBlock>

                            </StackPanel>

                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <ComboBox Name="pagingComboBox" Width="50" Canvas.Left="403" Canvas.Top="389" SelectionChanged="pagingComboBox_SelectionChanged" HorizontalAlignment="Left" VerticalAlignment="Center">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock>
                <Run Text="{Binding Page, Mode=OneTime}"/>/<Run Text="{Binding Total, Mode=OneTime}"/>
                        </TextBlock>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <Button x:Name="previousButton" Width="80" Height="34" Content="Previous" Canvas.Left="303" Canvas.Top="383" Click="previousButton_Click" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White" Background="Black">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button x:Name="nextButton" Width="80" Height="34" Content="Next" Canvas.Left="474" Canvas.Top="383" HorizontalAlignment="Left" VerticalAlignment="Center" Click="nextButton_Click" RenderTransformOrigin="-0.481,0.486" Foreground="White" Background="Black">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Label x:Name="NoBooks" Content="Books/Page" Canvas.Left="100" Canvas.Top="387"></Label>
            <ComboBox x:Name="booksPerPageComboBox" SelectedIndex="1" SelectionChanged="booksPerPageComboBox_SelectionChanged" Canvas.Left="180" Canvas.Top="389" HorizontalAlignment="Center" VerticalAlignment="Top">
                <ComboBoxItem Content="3"/>
                <ComboBoxItem Content="5"/>
                <ComboBoxItem Content="10"/>
            </ComboBox>
            <Button x:Name="catButton" Width="80" Height="36" Content="Category" Click="catButton_Click" Canvas.Left="640" Canvas.Top="15" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        </Canvas>
        <TabControl Width="100">
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>


    </DockPanel>
</Fluent:RibbonWindow>
